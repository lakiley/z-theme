// Color
color-background = #FBFBFB
color-font = #3A4145
color-meta = #999
color-border = #ddd
color-link = #258FB8

// Font
font-default = "Helvetica Neue", Helvetica, Arial, "Hiragino Sans GB", "Hiragino Sans GB W3", "Tahoma", "Microsoft YaHei UI", "Microsoft YaHei", '微软雅黑', SYHT, '思源黑体', "WenQuanYi Micro Hei", sans-serif
font-serif = "Georgia", serif
font-mono = Monaco, Menlo, Consolas, "Source Code Pro", Courier New, monospace
font-title = "Lato", Helvetica Neue, Helvetica, Arial, "Microsoft YaHei UI", "Microsoft YaHei", '微软雅黑', SYHT, '思源黑体', "WenQuanYi Micro Hei", sans-serif

font-icon = FontAwesome
font-icon-path = 'font/fontawesome-webfont'

@font-face {
  font-family 'FontAwesome'
  font-style normal
  font-weight normal
  src url(font-icon-path.eot?#iefix) format('embedded-opentype'), url(font-icon-path.woff) format('woff'), url(font-icon-path.ttf) format('truetype'), url(font-icon-path.svg#FontAwesomeRegular) format('svg')
}

// Width
page-width = 1200px